<main class="container">
  <div class="header">
    <h1 class="text-2xl font-bold mb-4 text-white">Creators</h1>
    <%= link_to "New creator", 
        new_creator_path, 
        data: { turbo_frame: dom_id(Creator.new)},
        class: "text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" %>
  </div>
  <%= turbo_frame_tag Creator.new %>
  <%= turbo_frame_tag "creators" do %>
    <div class="w-full text-sm my-6 text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <div class="grid grid-cols-6 text-xs gap-4 p-4 text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <div>Name</div>
        <div>Email</div>
        <div>Status</div>
        <div>Total Paid</div>
        <div>Pending Payouts</div>
        <div>Actions</div>
      </div>
    </div>
    <% @creators.each do |creator| %>
      <%= render partial: "creator", locals: { creator: creator } %>
    <% end %>
  </div>
<% end %>
</main>
