<div id="creator_<%= creator.id %>" is="turbo-frame">
  <%= form_with(model: creator, url: creators_path, data: { turbo_frame: "creators" }) do |f| %>
    <td class="px-4 py-2">
      <%= f.text_field :name, placeholder: "Name", class: "w-full rounded border border-gray-300 px-2 py-1 text-sm" %>
    </td>
    <td class="px-4 py-2">
      <%= f.email_field :email, placeholder: "Email", class: "w-full rounded border border-gray-300 px-2 py-1 text-sm" %>
    </td>
    <td class="px-4 py-2 text-gray-400 text-sm">auto</td>
    <td class="px-4 py-2 text-gray-400 text-sm">auto</td>
    <td class="px-4 py-2 text-gray-400 text-sm">auto</td>
    <td class="px-4 py-2" colspan="4">
      <%= f.submit "Add", class: "bg-indigo-600 text-white px-4 py-1 rounded hover:bg-indigo-700 text-sm" %>
    </td>
  <% end %>
</div>